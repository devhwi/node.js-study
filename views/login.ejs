<% layout('layout') -%>
<div class="container col-md-4">
  <div class="title" align="right">
    <h1>로그인</h1>
  </div>
  <form action="/user/login" method="POST" class="col-md-12">
    <div class="form-group row">
      <label for="user_id">아이디</label>
      <input type="text" class="form-control" name="user_id" required>
    </div>
    <div class="form-group row">
      <label for="user_id">비밀번호</label>
      <input type="password" class="form-control" name="user_password" required>
    </div>
    <div class="form-group row">
      <button type="submit" class="btn btn-block btn-primary">로그인</button>
      <button type="button" class="btn btn-block btn-secondary" onclick="location.href='/user/signup'">회원가입</button>
    </div>
  </form>
</div>